global:
  scrape_interval: 15s

scrape_configs:
  - job_name: "pve-exporter1"
    static_configs:
      - targets: ["192.168.1.200:9221"]
    metrics_path: "/pve"

  - job_name: "pve-exporter2"
    static_configs:
      - targets: ["192.168.100.1:9221"]
    metrics_path: "/pve"

  - job_name: "localhost node-exporter"
    static_configs:
      - targets: ["localhost:9100"]
    metrics_path: "/metrics"

  - job_name: "dellvpn node-exporter"
    static_configs:
      - targets: ["10.10.8.4:9100"]
    metrics_path: "/metrics"
